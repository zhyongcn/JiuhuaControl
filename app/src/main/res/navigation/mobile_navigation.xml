<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/nav_home"
    tools:ignore="UnusedNavigation">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.jiuhua.jiuhuacontrol.ui.home.HomeFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_nav_home_to_roomHostFragment"
            app:destination="@id/roomHostFragment" />
    </fragment>
    <fragment
        android:id="@+id/roomHostFragment"
        android:name="com.jiuhua.jiuhuacontrol.ui.room.RoomHostFragment"
        android:label="房间信息"
        tools:layout="@layout/fragment_room_host" />
    <fragment
        android:id="@+id/nav_userinfo"
        android:name="com.jiuhua.jiuhuacontrol.ui.userinfo.UserInfoFragment"
        android:label="用户信息"
        tools:layout="@layout/fragment_userinfo" />
    <fragment
        android:id="@+id/nav_equipmentManual"
        android:name="com.jiuhua.jiuhuacontrol.ui.equipmentManual.EquipmentManualFragment"
        android:label="设备手册"
        tools:layout="@layout/fragment_equipmentmanual" />
    <fragment
        android:id="@+id/nav_service"
        android:name="com.jiuhua.jiuhuacontrol.ui.service.ServiceFragment"
        android:label="服务商"
        tools:layout="@layout/fragment_service" />
    <fragment
        android:id="@+id/nav_partsstore"
        android:name="com.jiuhua.jiuhuacontrol.ui.partsstore.PartsStoreFragment"
        android:label="配件商城"
        tools:layout="@layout/fragment_service" />
    <fragment
        android:id="@+id/nav_share"
        android:name="com.jiuhua.jiuhuacontrol.ui.share.ShareFragment"
        android:label="分享"
        tools:layout="@layout/fragment_share" />
    <fragment
        android:id="@+id/nav_send"
        android:name="com.jiuhua.jiuhuacontrol.ui.send.SendFragment"
        android:label="邮件"
        tools:layout="@layout/fragment_send" />

</navigation>