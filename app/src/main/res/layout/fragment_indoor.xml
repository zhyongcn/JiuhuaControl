<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="data"
            type="com.jiuhua.jiuhuacontrol.ui.indoor.IndoorViewModel" />
    </data>
    <!--这个FrameLayou 是为了动态代码的加载？  就是为了左右滑动加载的页面！！TODO 不要动！！-->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.indoor.IndoorFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewRoomName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:text="@{data.getCurrentlyRoomName}"
                android:textSize="24sp"
                tools:text="房间名称" />

            <TextView
                android:id="@+id/current_temperature_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="60sp"
                tools:text="当前温度℃" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/aircondition_state_label"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="2dp"
                        android:background="#B21C23BC"
                        android:text="空调运行状态"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/show_aircondition_setting_temperature"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="2dp"
                        android:text="空调设定温度      xxx ℃"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/show_aircondition_running_model"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="2dp"
                        android:text="运行模式        手动模式"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/show_aircondition_running_fanspeed"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="2dp"
                        android:text="风机状态       高速风"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/show_aircondition_running_state_coilvalve"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="2dp"
                        android:textSize="20sp"
                        tools:text="运行状态      运行中" />

                    <TextView
                        android:id="@+id/aircondition_opreate_label"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#7807078A"
                        android:text="空调操作"
                        android:textSize="20sp" />

                    <LinearLayout
                        android:id="@+id/aircondition_temperature_set"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="2dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textview_aircondition_temperature_set"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="70sp"
                            android:text="空调温度设置"
                            android:textSize="20sp" />

                        <ImageView
                            android:id="@+id/aircondition_down_temperature"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            app:srcCompat="@drawable/downbutton" />

                        <EditText
                            android:id="@+id/aircondition_set_temperature_number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ems="2"
                            android:gravity="center_horizontal"
                            android:inputType="number"
                            android:text="25" />

                        <TextView
                            android:id="@+id/textview_Celsius_symbol_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="℃"
                            android:textSize="20sp" />

                        <ImageView
                            android:id="@+id/aircondition_up_temperature"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            app:srcCompat="@drawable/upbutton" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/textview_aircondition_model_set"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="50sp"
                        android:text="空调运行模式设置"
                        android:textSize="20sp" />

                    <RadioGroup
                        android:id="@+id/radio_group_aircondition_set_model"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="2dp"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/radioButton_aircondition_model_Off"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="停止" />

                        <RadioButton
                            android:id="@+id/radioButton_aircondition_mode_Manual"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="手动" />

                        <RadioButton
                            android:id="@+id/radioButton_aircondition_mode_Automatic"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="自动" />

<!--                        <RadioButton-->
<!--                            android:id="@+id/radioButton_aircondition_mode_Outside"-->
<!--                            android:layout_width="wrap_content"-->
<!--                            android:layout_height="wrap_content"-->
<!--                            android:text="外出" />-->

<!--                        <RadioButton-->
<!--                            android:id="@+id/radioButton_aircondition_mode_Sleep"-->
<!--                            android:layout_width="wrap_content"-->
<!--                            android:layout_height="wrap_content"-->
<!--                            android:text="睡眠" />-->

                        <RadioButton
                            android:id="@+id/radioButton_aircondition_mode_Humidity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="除湿" />

                    </RadioGroup>

                    <TextView
                        android:id="@+id/aircondition_fanspeedset"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="50sp"
                        android:text="空调风速设置"
                        android:textSize="20sp" />

                    <RadioGroup
                        android:id="@+id/fanspeed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="2dp"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/radioButtonlowfan"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="低速风" />

                        <RadioButton
                            android:id="@+id/radioButtonmiddlefan"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="中速风" />

                        <RadioButton
                            android:id="@+id/radioButtonhighfan"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="高速风" />

                        <RadioButton
                            android:id="@+id/radioButtonautofan"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="自动风" />
                    </RadioGroup>

                    <TextView
                        android:id="@+id/floorheat_state_label"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="2dp"
                        android:background="#BC5E5E"
                        android:text="地暖运行状态"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/show_floorheat_settingTemperature"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="2dp"
                        android:text="地暖设定温度     XXX ℃"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/show_floorheat_running_Model"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="2dp"
                        android:text="地暖运行模式      宴会模式"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/show_floorheat_running_states"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="2dp"
                        android:textSize="20sp"
                        tools:text="地暖状态       运行中" />

                    <TextView
                        android:id="@+id/floorheat_operate_label"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="2dp"
                        android:background="#DA9090"
                        android:textSize="20sp"
                        tools:text="地暖操作" />

                    <LinearLayout
                        android:id="@+id/floorheat_temperature_set"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="2dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textview_floorheat_temperature_set"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="70sp"
                            android:text="地暖温度设置"
                            android:textSize="20sp" />

                        <ImageView
                            android:id="@+id/floorheat_temperature_down"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            app:srcCompat="@drawable/downbutton" />

                        <EditText
                            android:id="@+id/floorheat_temperature_set_number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ems="2"
                            android:gravity="center_horizontal"
                            android:inputType="number"
                            android:text="25" />

                        <TextView
                            android:id="@+id/textview_Celsius_symbol_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="℃"
                            android:textSize="20sp" />

                        <ImageView
                            android:id="@+id/floorheat_temperature_up"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            app:srcCompat="@drawable/upbutton" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/textview_floorheat_model_set"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="2dp"
                        android:textSize="20sp"
                        android:text="地暖运行模式设置" />

                    <RadioGroup
                        android:id="@+id/radioGroup_floorHeat_set_model"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="2dp"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/radioButton_floorheat_model_Off"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="停止" />

                        <RadioButton
                            android:id="@+id/radioButton_floorheat_model_Manual"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="手动" />

                        <RadioButton
                            android:id="@+id/radioButton_floorheat_model_Automatic"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="自动" />

<!--                        <RadioButton-->
<!--                            android:id="@+id/radioButton_floorheat_model_Outside"-->
<!--                            android:layout_width="match_parent"-->
<!--                            android:layout_height="wrap_content"-->
<!--                            android:text="外出" />-->

<!--                        <RadioButton-->
<!--                            android:id="@+id/radioButton_floorheat_model_Sleep"-->
<!--                            android:layout_width="match_parent"-->
<!--                            android:layout_height="wrap_content"-->
<!--                            android:text="睡眠" />-->

                        <RadioButton
                            android:id="@+id/radioButton_floorheat_model_Feast"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="宴会" />

                    </RadioGroup>

                </LinearLayout>

            </ScrollView>


        </LinearLayout>

    </FrameLayout>
</layout>