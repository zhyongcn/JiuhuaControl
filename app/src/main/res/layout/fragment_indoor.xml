            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/roomnameline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_percent="0.05" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/currentTemperatureline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_percent="0.15" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/fanspeedline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_percent="0.65" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/ACtempsetline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_percent="0.4" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/ACmodelline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_percent="0.48" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/floormodelline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_percent="0.95" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/floortempsetline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_percent="0.84" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/rightline"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.95" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/leftline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.05" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/verticalcenterline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.50" />

                <TextView
                    android:id="@+id/textViewRoomName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{data.getCurrentlyRoomName}"
                    android:textSize="24sp"
                    app:layout_constraintBottom_toTopOf="@+id/roomnameline"
                    app:layout_constraintEnd_toStartOf="@+id/rightline"
                    app:layout_constraintStart_toStartOf="@+id/leftline"
                    app:layout_constraintTop_toTopOf="@+id/roomnameline"
                    tools:text="房间名称" />

                <TextView
                    android:id="@+id/temp_temperaturextview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="72sp"
                    app:layout_constraintBottom_toTopOf="@+id/currentTemperatureline"
                    app:layout_constraintEnd_toStartOf="@+id/rightline"
                    app:layout_constraintHorizontal_bias="0.497"
                    app:layout_constraintStart_toStartOf="@+id/leftline"
                    app:layout_constraintTop_toTopOf="@+id/currentTemperatureline"
                    tools:text="当前温度℃" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="32dp"
                    android:text="风机状态       高速风"
                    android:textSize="20sp"
                    app:layout_constraintBottom_toTopOf="@+id/textView10"
                    app:layout_constraintEnd_toStartOf="@+id/verticalcenterline"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="@+id/leftline" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:text="设定温度      xxx ℃"
                    android:textSize="20sp"
                    app:layout_constraintBottom_toTopOf="@+id/textView8"
                    app:layout_constraintEnd_toStartOf="@+id/verticalcenterline"
                    app:layout_constraintTop_toBottomOf="@+id/textView9"
                    app:layout_constraintVertical_bias="0.128" />

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="空调操作"
                    android:textSize="20sp"
                    tools:layout_editor_absoluteX="30dp"
                    tools:layout_editor_absoluteY="241dp" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="运行模式        手动"
                    android:textSize="20sp"
                    tools:layout_editor_absoluteX="220dp"
                    tools:layout_editor_absoluteY="178dp" />

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="#A46490C5"
                    android:text="空调运行状态"
                    android:textSize="20sp"
                    app:layout_constraintEnd_toStartOf="@+id/rightline"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="@+id/leftline"
                    tools:layout_editor_absoluteY="147dp" />

                <RadioGroup
                    android:id="@+id/airconditionrunModel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintBottom_toTopOf="@+id/ACmodelline"
                    app:layout_constraintEnd_toEndOf="@+id/rightline"
                    app:layout_constraintStart_toStartOf="@+id/leftline"
                    app:layout_constraintTop_toTopOf="@+id/ACmodelline">

                    <RadioButton
                        android:id="@+id/radioButtonoff"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="停止" />

                    <RadioButton
                        android:id="@+id/radioButtonManual"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="手动" />

                    <RadioButton
                        android:id="@+id/radioButtonAutomatic"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="自动" />

                    <RadioButton
                        android:id="@+id/radioButtonOutside"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="外出" />

                    <RadioButton
                        android:id="@+id/radioButtonSleep"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="睡眠" />

                    <RadioButton
                        android:id="@+id/radioButtonHumidity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="除湿" />

                </RadioGroup>

                <TextView
                    android:id="@+id/textViewFloorValve2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="#DA9090"
                    android:textSize="20sp"
