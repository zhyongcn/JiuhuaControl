                        android:text="自动" />

                    <RadioButton
                        android:id="@+id/radioButtonheatOutside"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="外出" />

                    <RadioButton
                        android:id="@+id/radioButtonheatSleep"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="睡眠" />

                    <RadioButton
                        android:id="@+id/radioButtonFeast"
                        android:layout_width="match_parent"
