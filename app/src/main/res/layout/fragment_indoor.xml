                        android:text="停止" />

                    <RadioButton
                        android:id="@+id/radioButtonheatManual"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="手动" />

                    <RadioButton
                        android:id="@+id/radioButtonheatrAutomatic"
                        android:layout_width="match_parent"
