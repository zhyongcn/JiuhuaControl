                    tools:text="地暖运行模式" />

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="#BC5E5E"
                    android:text="地暖运行状态"
                    android:textSize="20sp"
                    app:layout_constraintEnd_toStartOf="@+id/rightline"
                    app:layout_constraintStart_toStartOf="@+id/leftline"
                    tools:layout_editor_absoluteY="480dp" />

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="地暖运行模式"
                    android:textSize="20sp"
                    tools:layout_editor_absoluteX="234dp"
                    tools:layout_editor_absoluteY="522dp" />

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="地暖设定温度"
                    android:textSize="20sp"
                    tools:layout_editor_absoluteX="21dp"
                    tools:layout_editor_absoluteY="522dp" />

                <TextView
                    android:id="@+id/textViewCoilValve"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    app:layout_constraintEnd_toStartOf="@+id/rightline"
                    app:layout_constraintHorizontal_bias="0.974"
                    app:layout_constraintStart_toStartOf="@+id/leftline"
                    tools:layout_editor_absoluteY="207dp"
                    tools:text="运行状态      运行中" />

                <TextView
                    android:id="@+id/textViewFloorValve"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    tools:layout_editor_absoluteX="21dp"
                    tools:layout_editor_absoluteY="567dp"
                    tools:text="地暖状态       运行中" />

                <RadioGroup
                    android:id="@+id/floorHeatRunModel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintBottom_toTopOf="@+id/floormodelline"
                    app:layout_constraintEnd_toEndOf="@+id/rightline"
                    app:layout_constraintStart_toStartOf="@+id/leftline"
                    app:layout_constraintTop_toTopOf="@+id/floormodelline">

                    <RadioButton
                        android:id="@+id/radioButtonheatoff"
                        android:layout_width="match_parent"
