                    app:srcCompat="@drawable/downbutton"
                    tools:layout_editor_absoluteX="243dp" />

                <EditText
                    android:id="@+id/editTextNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
